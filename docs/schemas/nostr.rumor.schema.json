{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://synvya.com/schemas/nostr.rumor.schema.json",
  "title": "Nostr Rumor (Unsigned Event)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "kind",
    "created_at",
    "tags",
    "content"
  ],
  "properties": {
    "kind": {
      "type": "integer",
      "description": "e.g., 32101, 32102, 31923, 31924, 31925"
    },
    "created_at": {
      "type": "integer",
      "description": "Unix timestamp (seconds)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      }
    },
    "content": {
      "type": "string",
      "description": "NIP-44 encrypted payload (opaque ciphertext)"
    }
  }
}