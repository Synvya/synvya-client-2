{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://synvya.com/schemas/reservation.request.schema.json",
  "title": "Synvya Reservation Request Payload",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "party_size",
    "iso_time"
  ],
  "properties": {
    "party_size": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20
    },
    "iso_time": {
      "type": "string",
      "format": "date-time",
      "description": "Requested local time in ISO8601 with timezone offset"
    },
    "notes": {
      "type": "string",
      "maxLength": 2000
    },
    "contact": {
      "type": "object",
      "additionalProperties": false,
      "description": "Optional contact details for the guest",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 200
        },
        "phone": {
          "type": "string",
          "maxLength": 64
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "description": "Optional constraints/preferences affecting negotiation",
      "properties": {
        "earliest_iso_time": {
          "type": "string",
          "format": "date-time"
        },
        "latest_iso_time": {
          "type": "string",
          "format": "date-time"
        },
        "outdoor_ok": {
          "type": "boolean"
        },
        "accessibility_required": {
          "type": "boolean"
        }
      }
    }
  }
}