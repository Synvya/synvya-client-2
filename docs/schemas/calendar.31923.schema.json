{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://synvya.com/schemas/calendar.event.31923.schema.json",
  "title": "NIP-52 Time-Based Calendar Event (31923) Payload",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "summary",
    "starts_at",
    "ends_at"
  ],
  "properties": {
    "summary": {
      "type": "string",
      "maxLength": 256
    },
    "description": {
      "type": "string",
      "maxLength": 4000
    },
    "starts_at": {
      "type": "string",
      "format": "date-time"
    },
    "ends_at": {
      "type": "string",
      "format": "date-time"
    },
    "timezone": {
      "type": "string",
      "maxLength": 64
    },
    "location": {
      "type": "string",
      "maxLength": 512
    },
    "party_size": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20
    },
    "guest_contact": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 200
        },
        "phone": {
          "type": "string",
          "maxLength": 64
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "external_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "system": {
            "type": "string",
            "maxLength": 64
          },
          "id": {
            "type": "string",
            "maxLength": 256
          }
        },
        "required": [
          "system",
          "id"
        ]
      }
    }
  }
}